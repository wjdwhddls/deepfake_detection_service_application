<!-- android/app/src/main/AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

  <!-- 네트워크/오디오 기본 권한 -->
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.RECORD_AUDIO" />
  <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

  <!-- 파일 접근(개발용). SDK 33+는 READ_MEDIA_AUDIO, 그 이하 READ/WRITE_EXTERNAL_STORAGE -->
  <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
  <uses-permission
      android:name="android.permission.READ_EXTERNAL_STORAGE"
      tools:targetApi="28" />
  <uses-permission
      android:name="android.permission.WRITE_EXTERNAL_STORAGE"
      tools:targetApi="28" />

  <!-- 진동/웨이크락 -->
  <uses-permission android:name="android.permission.VIBRATE" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />

  <!-- (선택) 전화 관련 – 필요 시 유지 -->
  <uses-permission android:name="android.permission.READ_PHONE_STATE" />
  <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
  <uses-permission android:name="android.permission.CALL_PHONE" />
  <uses-permission android:name="android.permission.ANSWER_PHONE_CALLS" />
  <uses-permission
      android:name="android.permission.PROCESS_OUTGOING_CALLS"
      tools:targetApi="28" />
  <uses-permission android:name="android.permission.READ_CONTACTS" />
  <uses-permission android:name="android.permission.READ_CALL_LOG" />
  <!-- BIND_* 권한들은 보통 uses-permission로 요청할 필요 없음. service 쪽에 android:permission 으로 지정됨 -->
  <!-- <uses-permission android:name="android.permission.BIND_SCREENING_SERVICE"/> 등은 삭제 가능 -->

  <!-- (선택) 오버레이/카메라 -->
  <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
  <uses-permission android:name="android.permission.CAMERA" />

  <!-- (선택) 포어그라운드 서비스 -->
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

  <application
      android:name=".MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:allowBackup="false"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      android:usesCleartextTraffic="true"
      android:allowAudioPlaybackCapture="true">

    <!-- 메인 액티비티 -->
    <activity
        android:name=".MainActivity"
        android:label="@string/app_name"
        android:exported="true"
        android:launchMode="singleTask"
        android:windowSoftInputMode="adjustResize"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <!-- 통화 오버레이 액티비티 (필요한 경우) -->
    <activity
        android:name=".Call.CallOverlayActivity"
        android:exported="true"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="stateAlwaysHidden"
        android:theme="@android:style/Theme.Translucent.NoTitleBar"
        tools:ignore="UnusedAttribute">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>

    <!-- 🔴 PlaybackCaptureActivity: 미디어 프로젝션 권한 요청용 (반드시 추가) -->
    <activity
        android:name=".PlaybackCaptureActivity"
        android:exported="false"
        android:theme="@android:style/Theme.Translucent.NoTitleBar" />

    <!-- 서비스들 (있다면) -->
    <service
        android:name=".Call.CallBackgroundMessaging"
        android:exported="false" />

    <service
        android:name=".Call.CallScreeningServiceImpl"
        android:exported="true"
        android:permission="android.permission.BIND_SCREENING_SERVICE">
      <intent-filter>
        <action android:name="android.telecom.CallScreeningService" />
      </intent-filter>
    </service>

  </application>
</manifest>
